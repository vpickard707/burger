{{!-- Setup the index.handlebars to have the template that Handlebars can render onto --}}
<h1 class="title text-center">Eat-Da-Burger!</h1>
<h2>Burgers Ready</h2>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h3>Burgers Devoured!</h3>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger to the Menu</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
    </div>

    <div class="form-group">
        <label for="burger_name">Burger Name</label><br>
        <input type="text" id="burger-name" value="Enter " name="burger_name">
    </div>

</form>


{{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
<form id="add-burger" action="/burgers" class="create-form" method="POST">
    <div class="form-group col-md-8">
        <input type="text" id="enter-burger" name="burger_name" class="form-control">
        <button type="submit" class="btn btn-default" id="submit-burger">ADD BURGER</button>
    </div>
</form>